
@model FastEquipmentRental.Models.EquipmentRequest

@{
    Layout = "_Layout";
    ViewBag.Title = "Rental Form";
}

<h1>Equipment Request Form</h1>

<form asp-action="RequestForm" method="post">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter name">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control" placeholder="xxx-xxx-xxxx" />
    </div>

    <div class="form-group">
        <label>Role</label>

        <select required asp-for="Role" type="custom-select">
            <option selected disabled value="">Select Equipment Type</option>
            <option value="Student">Student</option>
            <option value="Professor">Professor</option>
        </select>
    </div>

    <div class="form-group">
        <label>Equipment Type</label>

        <select required asp-for="EqType" type="custom-select">
            <option selected disabled value="">Select Equipment Type</option>
            <option value="Laptop">Laptop</option>
            <option value="Tablet">Tablet</option>
            <option value="Phone">Phone</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Details">Request Details</label>
        <textarea asp-for="Details" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Days">Duration (Days)</label>
        <input asp-for="Days" class="form-control" aria-describedby="durationHelp">
        <small id="durationHelp" class="form-text text-muted">Please enter the number of days you'd like to rent the equipment for.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
