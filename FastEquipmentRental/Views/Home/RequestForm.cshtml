
@model FastEquipmentRental.Models.EquipmentRequest

@{
    Layout = "_Layout";
    ViewBag.Title = "Rental Form";
}

<h1>Equipment Request Form</h1>

<form asp-action="RequestForm" method="post">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter name">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control" placeholder="xxx-xxx-xxxx" />
    </div>

    <div class=" form-group">
        <label>Role (Who are you?) </label>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="roleRadios" id="studentRadio" value="student" checked>
            <label class="form-check-label" for="studentRadio">
                Student
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="roleRadios" id="professorRadio" value="professor">
            <label class="form-check-label" for="professorRadio">
                Professor
            </label>
        </div>
    </div>

    <div class="form-group">
        <label>Equipment Type</label>

        <select required type="custom-select">
            <option selected disabled value="">Select Equipment Type</option>
            <option value="1">Laptop</option>
            <option value="2">Tablet</option>
            <option value="3">Phone</option>
            <option value="4">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Details">Request Details</label>
        <textarea asp-for="Details" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Days">Duration (Days)</label>
        <input asp-for="Days" class="form-control" aria-describedby="durationHelp">
        <small id="durationHelp" class="form-text text-muted">Please enter the number of days you'd like to rent the equipment for.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
